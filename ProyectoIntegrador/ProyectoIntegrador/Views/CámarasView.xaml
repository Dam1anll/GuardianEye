<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoIntegrador.Views.CámarasView"
             Title="Cámaras">

    <StackLayout Margin="0,0,0,10" BackgroundColor="#141414">
        <StackLayout>
            <StackLayout>
                <BoxView Color="#dee2e6" HeightRequest="2" VerticalOptions="CenterAndExpand" Margin="0,20,0,0"/>
