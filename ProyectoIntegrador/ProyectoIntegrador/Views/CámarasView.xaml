                    <Button Text="Activar" Grid.Row="1" Grid.Column="1" x:Name="btnActivar" Clicked="BtnActivar_Clicked" BackgroundColor="Green" Margin="0,-20,0,20"/>
                    <Button  Text="Desactivar" Grid.Row="2" Grid.Column="1" x:Name="btnDesactivar" Clicked="BtnDesactivar_Clicked" BackgroundColor="Gray" Margin="0,-20,0,20"/>


